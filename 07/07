 \\propto k.\n","versions":[{"version":"v1","created":"Tue, 7 Jul 2009 12:25:35 GMT"},{"version":"v2","created":"Mon, 26 Oct 2009 03:15:49 GMT"},{"version":"v3","created":"Sun, 4 Apr 2010 15:58:55 GMT"}],"update_date":"2012-06-13"}
